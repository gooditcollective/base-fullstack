{
  "include": [
    "src/**/*",
    "next-env.d.ts",
    "playwright.config.ts",
    "./tests/**/*.ts",
    "./sentry.*.config.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "preserve",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"],
    "outDir": "build",
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true
  }
}
